<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_no_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/nodata_bg"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_tips"
        android:layout_alignLeft="@id/tv_tips"
        android:layout_alignRight="@+id/tv_tips"
        android:layout_marginTop="-4dp"
        android:background="@drawable/qt_tips_blue_bg_circle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/bg_loading_material"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_weight="2.6"
            android:background="@mipmap/left_bg"
            android:orientation="vertical"
            android:padding="7dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/qt_global_dialog_bg"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontal_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/qt_register_circle_shape"
                android:orientation="vertical"
                android:visibility="visible">
                <ScrollView
                    android:id="@+id/scrollable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:layout_marginTop="9dp"
                            android:focusable="true"
                            android:layout_marginLeft="6dp"
                            android:drawableLeft="@mipmap/title"
                            android:drawablePadding="4dp"
                            android:shadowColor="#B200"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:text=""
                            android:textColor="@color/qt_favourable_detail_text"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone"/>


                        <ImageView
                            android:id="@+id/img_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/loading_activity"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_title_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/qt_shape_favourable_text_bg"
                            android:paddingLeft="12dp"
                            android:paddingTop="2dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="2dp"
                            android:text="活动时间"
                            android:visibility="gone"
                            android:textColor="@color/qt_favourable_detail_text"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textColor="@color/qt_favourable_detail_text"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_title_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/qt_shape_favourable_text_bg"
                            android:paddingLeft="12dp"
                            android:paddingTop="2dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="2dp"
                            android:text="活动说明"
                            android:visibility="gone"
                            android:textColor="@color/qt_favourable_detail_text"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_activity_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/qt_global_second_dialog_bg"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@mipmap/btn_blue"
                            android:gravity="center"
                            android:shadowColor="#B200"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:text="立即申请"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


        </LinearLayout>

        <!--<FrameLayout-->
        <!--android:id="@+id/view_pager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginRight="6dp"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:background="@color/qt_login_main"-->
        <!--&gt;-->

        <!--</FrameLayout>-->

    </LinearLayout>

</LinearLayout>