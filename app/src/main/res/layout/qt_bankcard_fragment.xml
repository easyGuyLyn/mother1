<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qt_shape_login_square"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_now_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_invent_code"
                    android:minWidth="60dp"
                    android:gravity="right"
                    android:text="@string/real_name"
                    android:textSize="@dimen/text_13_sp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_real_name"
                    style="@style/qt_safyty_item_input"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:hint="请输入姓名"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8" />

                <TextView
                    android:id="@+id/tv_real_name_hint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/hint_real_name"
                    android:layout_alignLeft="@+id/hint_real_name"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/real_name_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_invent_code"
                    android:minWidth="60dp"
                    android:gravity="right"
                    android:text="@string/bank_name"
                    android:textSize="@dimen/text_13_sp"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/ll_select_bank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/qt_shape_login_input"
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/please_select"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_bank"
                        android:src="@mipmap/drop_down" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_invent_code"
                    android:minWidth="60dp"
                    android:gravity="right"
                    android:text="@string/card_number"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_card_number"
                    style="@style/qt_safyty_item_input"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:digits="1234567890"
                    android:maxLength="25"
                    android:hint="@string/input_card_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_invent_code"
                    android:minWidth="60dp"
                    android:gravity="right"
                    android:text="开户银行"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_open_account_bank"
                    style="@style/qt_safyty_item_input"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:hint="@string/open_account_bank_hint"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_open_account_bank_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:minWidth="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/hint_real_name"
                    android:layout_alignLeft="@+id/hint_real_name"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/select_other_bank_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10_sp" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/btn_large_general"
                android:gravity="center"
                android:text="确认提交"
                android:shadowColor="#B200"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>