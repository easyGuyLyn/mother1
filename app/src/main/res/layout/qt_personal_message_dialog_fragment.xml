<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_tip_bg"
            android:layout_alignRight="@+id/ll_tip_bg"
            android:layout_below="@+id/ll_tip_bg"
            android:layout_marginTop="-6dp"
            android:background="@drawable/qt_tips_blue_bg_circle"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/qt_personal_circle"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/photo_male" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_icon"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/img_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/qt_shape_login_input"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                        android:text="123544"
                        android:textSize="17sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_login_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="上次登录时间"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <RelativeLayout
                        style="@style/qt_personal_item"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="11dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:padding="1dp"
                            android:text="随身福利"
                            android:layout_centerVertical="true"
                            android:textColor="@color/btn_yellow_normal"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_personal_welfare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:padding="1dp"
                            android:text="---"
                            android:textColor="@color/btn_yellow_normal"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/qt_personal_item"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="11dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:padding="1dp"
                            android:text="仓库福利"
                            android:layout_centerVertical="true"
                            android:textColor="@color/btn_yellow_normal"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_warehouse_welfare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:padding="1dp"
                            android:text="---"
                            android:textColor="@color/btn_yellow_normal"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_4"
                    android:background="@mipmap/btn_large_general"
                    android:text="@string/qt_logout"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@mipmap/btn_large_general"
                    android:text="@string/qt_personal_set"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_tip_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@mipmap/title_bg_short"
            android:gravity="center">


            <ImageView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/title04" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-28dp"
            android:layout_toRightOf="@+id/ll_tip_bg"
            android:src="@mipmap/close" />

    </RelativeLayout>
</LinearLayout>