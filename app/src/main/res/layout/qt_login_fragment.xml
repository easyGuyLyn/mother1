<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/qt_login_bg_circle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_30"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="账号"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center_vertical|right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="密码"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center_vertical|right"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:visibility="gone"
                android:gravity="center_vertical|right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/qt_shape_login_input"
                android:hint="请输入账号"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="11sp"
                android:maxLines="1"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/qt_shape_login_input"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="11sp"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dp_10"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />

            <!--验证码-->
            <LinearLayout
                android:id="@+id/rlCaptcha"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <EditText
                    android:id="@+id/etCaptcha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/qt_shape_login_input"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center_vertical|left"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/ivCaptcha"
                    android:layout_width="80dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="4dp"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <CheckBox
                    android:id="@+id/cb_password"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textColor="@color/white"
                    android:checked="false"
                    android:textSize="@dimen/sp_12"
                    style="@style/CustomCheckBoxTheme"
                    />

                <TextView
                    android:id="@+id/forget_pwd_tv"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:shadowColor="#B200"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:textStyle="bold"
        android:background="@mipmap/btn_large_general"
        android:text="@string/loginSoon"
        android:textColor="@color/colorTitle"
        android:textSize="16sp" />


</LinearLayout>