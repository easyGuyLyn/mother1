<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_ec4c48</item>
        <item name="colorPrimaryDark">@color/color_ec4c48</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/color_ec4c48</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--   <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@mipmap/s2</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 对话框样式 -->
    <style name="StyleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/s1</item>
    </style>

    <style name="DialogEnter" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>
